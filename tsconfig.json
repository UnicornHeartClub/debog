{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*"
  ],
}

